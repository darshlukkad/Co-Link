{
  "dashboard": {
    "title": "CoLink - Services Overview",
    "tags": ["colink", "microservices", "overview"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Service Health Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=~\".*-service\"}",
            "legendFormat": "{{job}}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 24,
          "x": 0,
          "y": 0
        },
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 1, "color": "green" }
              ]
            },
            "mappings": [
              { "type": "value", "value": "0", "text": "DOWN" },
              { "type": "value", "value": "1", "text": "UP" }
            ]
          }
        }
      },
      {
        "id": 2,
        "title": "Request Rate (RPM)",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total[5m])) by (job) * 60",
            "legendFormat": "{{job}}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 4
        },
        "yaxes": [
          {
            "format": "rpm",
            "label": "Requests per Minute"
          }
        ]
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{status=~\"5..\"}[5m])) by (job)",
            "legendFormat": "{{job}} errors",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 4
        },
        "yaxes": [
          {
            "format": "reqps",
            "label": "Errors per Second"
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [0.05],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "name": "High Error Rate Alert"
        }
      },
      {
        "id": 4,
        "title": "P95 Latency",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le, job))",
            "legendFormat": "{{job}} P95",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 12
        },
        "yaxes": [
          {
            "format": "s",
            "label": "Latency (seconds)"
          }
        ]
      },
      {
        "id": 5,
        "title": "Active WebSocket Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "websocket_active_connections",
            "legendFormat": "Active Connections",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 12
        },
        "yaxes": [
          {
            "format": "short",
            "label": "Connections"
          }
        ]
      },
      {
        "id": 6,
        "title": "CPU Usage by Service",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=\"colink\"}[5m])) by (pod)",
            "legendFormat": "{{pod}}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 20
        },
        "yaxes": [
          {
            "format": "percentunit",
            "label": "CPU Usage"
          }
        ]
      },
      {
        "id": 7,
        "title": "Memory Usage by Service",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(container_memory_usage_bytes{namespace=\"colink\"}) by (pod)",
            "legendFormat": "{{pod}}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 20
        },
        "yaxes": [
          {
            "format": "bytes",
            "label": "Memory Usage"
          }
        ]
      },
      {
        "id": 8,
        "title": "Database Connections (PostgreSQL)",
        "type": "graph",
        "targets": [
          {
            "expr": "pg_stat_database_numbackends",
            "legendFormat": "Active Connections",
            "refId": "A"
          },
          {
            "expr": "pg_settings_max_connections",
            "legendFormat": "Max Connections",
            "refId": "B"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 28
        }
      },
      {
        "id": 9,
        "title": "Redis Cache Hit Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(redis_keyspace_hits_total[5m]) / (rate(redis_keyspace_hits_total[5m]) + rate(redis_keyspace_misses_total[5m]))",
            "legendFormat": "Hit Rate",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 28
        },
        "yaxes": [
          {
            "format": "percentunit",
            "max": 1,
            "min": 0
          }
        ]
      },
      {
        "id": 10,
        "title": "Kafka Consumer Lag",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(kafka_consumergroup_lag) by (consumergroup, topic)",
            "legendFormat": "{{consumergroup}} - {{topic}}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 36
        },
        "yaxes": [
          {
            "format": "short",
            "label": "Messages Behind"
          }
        ]
      },
      {
        "id": 11,
        "title": "Messages Sent (Rate)",
        "type": "singlestat",
        "targets": [
          {
            "expr": "sum(rate(messages_sent_total[5m]))",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 44
        },
        "format": "reqps",
        "postfix": " msg/s",
        "sparkline": {
          "show": true
        }
      },
      {
        "id": 12,
        "title": "Files Uploaded (Rate)",
        "type": "singlestat",
        "targets": [
          {
            "expr": "sum(rate(file_uploads_total{status=\"success\"}[5m]))",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 44
        },
        "format": "reqps",
        "postfix": " files/s",
        "sparkline": {
          "show": true
        }
      },
      {
        "id": 13,
        "title": "Search Queries (Rate)",
        "type": "singlestat",
        "targets": [
          {
            "expr": "sum(rate(search_queries_total[5m]))",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 44
        },
        "format": "reqps",
        "postfix": " q/s",
        "sparkline": {
          "show": true
        }
      },
      {
        "id": 14,
        "title": "Active Users Online",
        "type": "singlestat",
        "targets": [
          {
            "expr": "count(presence_status{status=\"online\"})",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 18,
          "y": 44
        },
        "format": "short",
        "postfix": " users",
        "sparkline": {
          "show": true
        }
      }
    ]
  }
}
