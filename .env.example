# CoLink Environment Variables
# Copy this file to .env and update with your actual values
# DO NOT commit .env to version control!

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Database - PostgreSQL
DATABASE_URL=postgresql://colink:colink_dev_password@localhost:5432/colink
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# Database - MongoDB
MONGODB_URL=mongodb://colink:colink_dev_password@localhost:27017/colink?authSource=admin
MONGODB_DATABASE=colink

# Cache - Redis
REDIS_URL=redis://:colink_dev_password@localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# Message Queue - Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:29092
KAFKA_CONSUMER_GROUP=colink-services
KAFKA_AUTO_OFFSET_RESET=earliest

# Authentication - Keycloak
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=colink
KEYCLOAK_CLIENT_ID=colink-api
KEYCLOAK_CLIENT_SECRET=colink-api-secret-dev-only

# JWT Configuration
JWT_SECRET_KEY=dev-secret-key-change-in-production
JWT_ALGORITHM=RS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Object Storage - AWS S3 (LocalStack for development)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_ENDPOINT_URL=http://localhost:4566
AWS_S3_BUCKET=colink-files-dev
AWS_S3_PRESIGNED_URL_EXPIRY=3600

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# WebSocket
WS_HEARTBEAT_INTERVAL=30
WS_CONNECTION_TIMEOUT=300

# File Upload
MAX_FILE_SIZE_MB=100
ALLOWED_FILE_TYPES=image/*,video/*,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.*,text/*

# Email (MailHog for development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@colink.local
SMTP_FROM_NAME=CoLink
SMTP_USE_TLS=false

# Observability - Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Observability - OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=colink
OTEL_TRACES_ENABLED=true
OTEL_METRICS_ENABLED=true

# Service Ports (for local development)
PORT_GATEWAY=8000
PORT_USERS=8001
PORT_MESSAGING=8002
PORT_FILES=8003
PORT_SEARCH=8004
PORT_ADMIN=8005
PORT_CHANNELS=8006
PORT_PRESENCE=8007

# Security
SECRET_KEY=dev-secret-key-change-in-production-min-32-chars
BCRYPT_ROUNDS=12
CSRF_SECRET_KEY=dev-csrf-secret-change-in-production

# Feature Flags
FEATURE_FILE_VIRUS_SCAN=false
FEATURE_ADMIN_PANEL=true
FEATURE_ANALYTICS=true

# Third-party APIs (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
